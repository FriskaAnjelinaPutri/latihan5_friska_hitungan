<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <EditText
        android:id="@+id/etPanjang"
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:hint="Masukkan Panjang"
        android:inputType="number" />

    <EditText
        android:id="@+id/etLebar"
        android:layout_width="match_parent"
        android:layout_height="57dp"
        android:hint="Masukkan Lebar"
        android:inputType="number" />

    <EditText
        android:id="@+id/etTinggi"
        android:layout_width="match_parent"
        android:layout_height="59dp"
        android:hint="Masukkan Tinggi"
        android:inputType="number" />

    <Button
        android:id="@+id/btnHitung"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hitung" />

    <TextView
        android:id="@+id/tvLuasPermukaan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Luas Permukaan: " />

    <TextView
        android:id="@+id/tvVolume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volume: " />
</LinearLayout>
